<mjml>
    <mj-head>
    <mj-include path="./style.mjml" />
    </mj-head>
    <!-- Start content -->
    <mj-body background-color="#ece9e9">
    <!-- Logo and intro text -->
    <mj-section>
      <mj-column>
        <mj-image src="https://core.dev.analogio.dk/images/AnalogLogo.png" alt="Analog logo"></mj-image>
      </mj-column>
    </mj-section>

    <!-- Start recipient details -->
    <mj-section>
        <mj-column mj-class="detailsCard" css-class="detailsCard" >
            <mj-text mj-class="header">
                Hello {name},
            </mj-text>
            <mj-text mj-class="description">
                A new pin has been requested for your account ({email}). Please select a new one by clicking the button below within {expiry}.
            </mj-text>
            <mj-spacer height="20px" />
            <mj-text mj-class="description">
                If you did not request this change you can safely disregard this message.
            </mj-text>
            <mj-spacer height="20px" />
            <mj-button background-color="#38251a" href="{baseUrl}{endpoint}{token}"  mj-class="description" color="#ece9e9">
                Select a new pin
            </mj-button>
            <mj-spacer height="15px" />
        </mj-column>
    </mj-section>
    <!-- End recipient details -->
    
    <!-- Include footer -->
    <mj-include path="./footer.mjml" />
    
    </mj-body>
    <!-- End content -->
</mjml>